<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_toko_list"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/relative_layout_toko_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray2">

            <ImageView
                android:id="@+id/img_item_mebel"
                android:src="@drawable/img_lemari"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="160dp"
                android:layout_height="160dp"/>

            <TextView
                android:id="@+id/tv_item_mebel_name"
                android:layout_toRightOf="@id/img_item_mebel"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/Lemari"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_mebel_price"
                android:layout_toRightOf="@id/img_item_mebel"
                android:layout_below="@id/tv_item_mebel_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Rp. 100.000"
                android:textSize="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/add_barang_mebel"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:layout_below="@+id/tv_item_mebel_price"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="22dp"
                android:layout_toEndOf="@+id/img_item_mebel"
                android:text="Add To Chart"
                android:textSize="10sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>